{
  "name": "msd-front",
  "version": "0.0.1",
  "private": true,
  "description": "msd-front",
  "author": "Quentin LE CAIGNEC",
  "keywords": [
    "react",
    "next"
  ],
  "scripts": {
    "prepare": "husky install",
    "develop": "next dev --port 3002",
    "start": "next start",
    "build": "next build",
    "clean": "rm -rf .cache .tmp .next dist build coverage",
    "lint": "npm run lint:eslint && npm run lint:style && npm run lint:prettier",
    "lint:eslint": "eslint . --fix --max-warnings=0 --ignore-path .gitignore --ignore-path .eslintignore",
    "lint:style": "stylelint src/**/*.{css,scss,sass} --fix --max-warnings=0 --ignore-path .gitignore",
    "lint:prettier": "prettier . --write --ignore-unknown --ignore-path .gitignore --ignore-path .prettier.ignore",
    "test": "npm run test:typecheck && npm run test:jest",
    "test:typecheck": "tsc --noEmit",
    "test:jest": "jest --watch",
    "test:ci": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html"
  },
  "dependencies": {
    "@suezenv/react-theme-components": "2.6.10",
    "date-fns": "2.29.3",
    "isomorphic-dompurify": "0.23.0",
    "next": "12.3.1",
    "qs": "6.11.0",
    "react": "18.2.0",
    "react-big-calendar": "1.5.0",
    "react-dom": "18.2.0",
    "sass": "1.55.0",
    "swr": "1.3.0",
    "web-vitals": "3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@testing-library/dom": "8.18.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/dompurify": "2.3.4",
    "@types/jest": "29.1.2",
    "@types/node": "18.8.3",
    "@types/qs": "6.9.7",
    "@types/react": "18.0.21",
    "@types/react-big-calendar": "0.38.2",
    "@types/react-dom": "18.0.6",
    "eslint": "8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-testing-library": "5.7.2",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "jest-environment-jsdom": "29.1.2",
    "jest-junit": "14.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.13.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "typescript": "4.8.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint . --fix --max-warnings=0 --ignore-path .gitignore --ignore-path .eslintignore",
    "*.{css,scss,sass}": "stylelint src/**/*.{css,scss,sass} --fix --max-warnings=0 --ignore-path .gitignore",
    "*": "prettier . --write --ignore-unknown --ignore-path .gitignore --ignore-path .prettier.ignore"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
